    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^9.1.1",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "pg": "^8.7.1",
